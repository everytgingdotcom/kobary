    <script>
        // Function to update the preview in real-time
        function update() {
            document.getElementById('out_cTitle').innerText = document.getElementById('in_cTitle').value;
            document.getElementById('out_cCode').innerText = document.getElementById('in_cCode').value;
            document.getElementById('out_assNo').innerText = document.getElementById('in_assNo').value;
            document.getElementById('out_assTitle').innerText = document.getElementById('in_assTitle').value;
            
            document.getElementById('out_sName').innerText = document.getElementById('in_sName').value;
            document.getElementById('out_sID').innerText = document.getElementById('in_sID').value;
            document.getElementById('out_sBatch').innerText = document.getElementById('in_sBatch').value;
            document.getElementById('out_sSection').innerText = document.getElementById('in_sSection').value;
            
            document.getElementById('out_tName').innerText = document.getElementById('in_tName').value;
            document.getElementById('out_tDetails').innerText = document.getElementById('in_tDetails').value;
            
            document.getElementById('out_date').innerText = document.getElementById('in_date').value;
        }

        // Handle Image Upload
        document.getElementById('logoInput').addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('logoDisplay').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
